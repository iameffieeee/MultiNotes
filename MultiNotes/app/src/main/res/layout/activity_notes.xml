<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EAD2"
    android:backgroundTint="#F3EAD2"
    tools:context=".notes">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="1dp"
        android:text="My Notes"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/listvView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homeBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="371dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/welcome_btn"
        android:text="Home"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/bg"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listvView1"
        android:layout_width="409dp"
        android:layout_height="604dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#F3EAD2"
        android:backgroundTint="#F3EAD2"
        android:padding="10.0sp"
        android:paddingStart="10.0sp"
        android:paddingLeft="10.0sp"
        android:paddingTop="10.0sp"
        android:paddingEnd="10.0sp"
        android:paddingRight="10.0sp"
        android:paddingBottom="10.0sp"
        app:layout_constraintBottom_toTopOf="@+id/homeBtn"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>